@model DataConcert
@{
    Layout = "_NoLayout";
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3>Edit Concert</h3>
            </div>

            <div class="card-body">
                <form enctype="multipart/form-data" method="post" action="Edit">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="mb-3">
                        <label>Concert Name</label>
                        <input type="text" name="NamaKonser" class="form-control" value="@Model.NamaKonser"/>
                    </div>
                    <div class="mb-3">
                        <label>Musician</label>
                        <input type="text" name="Musisi" class="form-control" value="@Model.Musisi"/>
                    </div>
                    <div class="mb-3">
                        <label>Concert Venue</label>
                        <input type="text" name="TempatKonser" class="form-control" value="@Model.TempatKonser"/>
                    </div>
                    <div class="mb-3">
                        <label>Concert Date</label>
                        <input type="datetime-local" name="TanggalKonser" class="form-control" value="@Model.TanggalKonser" />
                    </div>
                    <div class="mb-3">
                        <label>Ticket Quota</label>
                        <input type="text" name="KuotaTiket" class="form-control" value="@Model.KuotaTiket"/>
                    </div>
                    <div class="mb-3">
                        <label>Status</label>
                        <select name="Status" class="form-control" value="@Model.Status">
                            <option>Not Published</option>
                            <option>Published</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Photo</label>
                        <input type="file" name="Photo" class="form-control" accept=".png,.jpg,.jpeg" />
                    </div>
                    <div class="mb-3">
                        <a class="btn btn-danger" href="/Concert/Index">
                            Back
                        </a>
                        <button type="submit" class="btn btn-success">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>